<Page x:Class="MarathonSkills2016.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="AuthorizationPage">
    <DockPanel Background="LightGray" LastChildFill="True">
        <!--  Верхняя панель  -->
        <Border
            Height="80"
            Background="Green"
            DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Кнопка Назад  -->
                <Button
                    Grid.Column="0"
                    Width="120"
                    Height="40"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Background="Green"
                    Click="GoBackButton_Click"
                    Content="Назад"
                    FontWeight="Bold"
                    Foreground="Black"
                    Style="{StaticResource RoundedButtonStyle}" />

                <!--  Заголовок  -->
                <TextBlock
                    Grid.Column="1"
                    Margin="115,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="MARATHON SKILLS 2025" />
            </Grid>
        </Border>
        <Border
            Height="60"
            Background="Green"
            DockPanel.Dock="Bottom">
            <TextBlock
                x:Name="CountdownTextBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Black"
                Text="18 дней 8 часов и 17 минут до старта марафона!" />
        </Border>
        <!--  Основное содержимое  -->
        <Grid Background="LightGray">
            <Border
                Width="426"
                Height="440"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderThickness="1"
                CornerRadius="10">
                <StackPanel Margin="40" VerticalAlignment="Center">
                    <!--  Заголовок формы  -->
                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#241D70"
                        Text="Форма авторизации" />

                    <TextBlock
                        Margin="0,0,0,30"
                        FontSize="14"
                        Foreground="#241D70"
                        Text="Пожалуйста, авторизуйтесь в системе, используя ваш адрес электронной почты и пароль."
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <!--  Поля ввода  -->
                    <StackPanel>
                        <!--  Email  -->
                        <TextBlock
                            Margin="0,0,0,5"
                            FontSize="14"
                            Foreground="#241D70"
                            Text="Email:" />

                        <TextBox
                            x:Name="EmailTxt"
                            Height="40"
                            Padding="10"
                            FontSize="13"
                            Foreground="#AAAAAA"
                            GotFocus="EmailTxt_GotFocus"
                            LostFocus="EmailTxt_LostFocus"
                            Style="{StaticResource ModernTextBox}"
                            Text="Введите ваш email"
                            TextChanged="EmailTextBox_TextChanged" />

                        <!--  Password  -->
                        <TextBlock
                            Margin="0,20,0,5"
                            FontSize="14"
                            Foreground="#241D70"
                            Text="Пароль:" />

                        <PasswordBox
                            x:Name="PassTxt"
                            Height="40"
                            Padding="10"
                            FontSize="16"
                            GotFocus="PassTxt_GotFocus"
                            LostFocus="PassTxt_LostFocus"
                            PasswordChanged="PasswordBox_PasswordChanged"
                            Style="{StaticResource ModernPasswordBox}" />

                        <TextBlock
                            x:Name="PasEnterLabel"
                            Margin="5,-30,0,0"
                            Foreground="#AAAAAA"
                            IsHitTestVisible="False"
                            Text="Введите ваш пароль" />
                    </StackPanel>

                    <!--  Кнопки  -->
                    <StackPanel
                        Margin="0,40,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Width="120"
                            Height="40"
                            Background="Green"
                            Click="LoginButton_Click"
                            Content="Войти"
                            FontWeight="Bold"
                            Foreground="White"
                            Style="{StaticResource RoundedButtonStyle}" />

                        <Button
                            Width="120"
                            Height="40"
                            Margin="20,0,0,0"
                            Background="Green"
                            Click="CancelButton_Click"
                            Content="Отмена"
                            FontWeight="Bold"
                            Foreground="Black"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Page>