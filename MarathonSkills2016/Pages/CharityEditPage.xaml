<Page x:Class="MarathonSkills2016.Pages.CharityEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="800"
      Title="CharityEditPage">
    <DockPanel Background="LightGray" LastChildFill="True">
        <!-- Верхняя панель -->
        <Border
            Height="80"
            Background="Green"
            DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Кнопка Назад -->
                <Button
                    Grid.Column="0"
                    Width="120"
                    Height="40"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Background="Green"
                    Click="GoBackButton_Click"
                    Content="Назад"
                    FontWeight="Bold"
                    Foreground="Black"
                    Style="{StaticResource RoundedButtonStyle}" />

                <!-- Заголовок -->
                <TextBlock
                    Grid.Column="1"
                    Margin="115,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="MARATHON SKILLS 2016" />
            </Grid>
        </Border>

        <Border
            Height="60"
            Background="Green"
            DockPanel.Dock="Bottom">
            <TextBlock
                x:Name="CountdownTextBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Black"
                Text="18 дней 8 часов и 17 минут до старта марафона!" />
        </Border>

        <!-- Основное содержимое -->
        <Grid Background="LightGray">
            <Border
                Width="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderThickness="1"
                CornerRadius="10"
                Margin="0,20,0,20">
                <StackPanel Margin="40">
                    <!-- Заголовок формы -->
                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#241D70"
                        Text="Добавление/Редактирование благотворительных организаций" />

                    <!-- Наименование -->
                    <TextBlock
                        Margin="0,10,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#241D70"
                        Text="Наименование:" />

                    <TextBox
                        x:Name="NameTextBox"
                        Height="40"
                        Padding="10"
                        FontSize="14"
                        Text="{Binding CharityName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource ModernTextBox}" />

                    <!-- Описание -->
                    <TextBlock
                        Margin="0,20,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#241D70"
                        Text="Описание:" />

                    <TextBox
                        x:Name="DescriptionTextBox"
                        Height="120"
                        Padding="10"
                        FontSize="14"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        Text="{Binding CharityDescription, Mode=TwoWay}"
                        Style="{StaticResource ModernTextBox}" />

                    <!-- Логотип файл -->
                    <TextBlock
                        Margin="0,20,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#241D70"
                        Text="Логотип файл:" />

                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="12"
                        FontStyle="Italic"
                        Foreground="#241D70"
                        Text="Оставьте поле 'Логотип файл' пустым, если вы не хотите загружать логотип" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox
                            x:Name="LogoPathTextBox"
                            Grid.Column="0"
                            Height="40"
                            Padding="10"
                            FontSize="14"
                            IsReadOnly="True"
                            Text="{Binding NewLogoPath, Mode=OneWay}"
                            Style="{StaticResource ModernTextBox}" />

                        <Button
                            Grid.Column="1"
                            Width="120"
                            Height="40"
                            Margin="10,0,0,0"
                            Background="Green"
                            Click="BrowseLogoButton_Click"
                            Content="Просмотр..."
                            FontWeight="Bold"
                            Foreground="White"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </Grid>

                    <!-- Текущий логотип -->
                    <TextBlock
                        Margin="0,20,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#241D70"
                        Text="Текущий логотип:" />

                    <Image
                        x:Name="CurrentLogoImage"
                        Width="120"
                        Height="120"
                        Stretch="Uniform"
                        Source="{Binding CurrentLogoPath}" />

                    <!-- Кнопки сохранения/отмены -->
                    <StackPanel
                        Margin="0,30,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Width="120"
                            Height="40"
                            Background="Green"
                            Click="SaveButton_Click"
                            Content="Сохранить"
                            FontWeight="Bold"
                            Foreground="White"
                            Style="{StaticResource RoundedButtonStyle}" />

                        <Button
                            Width="120"
                            Height="40"
                            Margin="20,0,0,0"
                            Background="Green"
                            Click="CancelButton_Click"
                            Content="Отмена"
                            FontWeight="Bold"
                            Foreground="Black"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Page>
