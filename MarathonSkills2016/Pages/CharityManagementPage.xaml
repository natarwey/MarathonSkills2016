<Page x:Class="MarathonSkills2016.Pages.CharityManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="CharityManagementPage">
    <DockPanel Background="LightGray" LastChildFill="True">
        <!-- Верхняя панель -->
        <Border
            Height="80"
            Background="Green"
            DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Кнопка Назад -->
                <Button
                    Grid.Column="0"
                    Width="120"
                    Height="40"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Background="Green"
                    Click="GoBackButton_Click"
                    Content="Назад"
                    FontWeight="Bold"
                    Foreground="Black"
                    Style="{StaticResource RoundedButtonStyle}" />

                <!-- Заголовок -->
                <TextBlock
                    Grid.Column="1"
                    Margin="115,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Управление благотворительными организациями" />
            </Grid>
        </Border>

        <Border
            Height="60"
            Background="Green"
            DockPanel.Dock="Bottom">
            <TextBlock
                x:Name="CountdownTextBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Black"
                Text="18 дней 8 часов и 17 минут до старта марафона!" />
        </Border>

        <!-- Основное содержимое -->
        <Grid Background="LightGray">
            <Border
                Width="750"
                MaxHeight="400"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderThickness="1"
                CornerRadius="10"
                Margin="0,20,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок и кнопка добавления -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,10">
                        <Button
                            x:Name="AddButton"
                            Width="150"
                            Height="40"
                            Background="Green"
                            Click="AddButton_Click"
                            Content="+ Добавить нового"
                            FontWeight="Bold"
                            Foreground="White"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </StackPanel>

                    <!-- Таблица организаций со скроллингом -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <ListView x:Name="LvCharity" BorderThickness="0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Лого" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding LogoPath}" Width="80" Height="80" Stretch="Uniform"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Наименование" Width="200" DisplayMemberBinding="{Binding CharityName}"/>
                                    <GridViewColumn Header="Описание" Width="350" DisplayMemberBinding="{Binding ShortDescription}"/>
                                    <GridViewColumn Header="Edit" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button
                                                    Content="Edit"
                                                    Background="Green"
                                                    Foreground="Black"
                                                    FontWeight="Bold"
                                                    Width="80"
                                                    Height="30"
                                                    Click="EditButton_Click"
                                                    Tag="{Binding CharityId}"
                                                    Style="{StaticResource RoundedButtonStyle}"/>       
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Page>