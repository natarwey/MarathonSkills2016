<Page x:Class="MarathonSkills2016.Pages.SpisokBlagotvorOrg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Список благотворительных организаций">

    <Page.Resources>
        <local:ImagePathConverter x:Key="ImagePathConverter" />

        <!-- Стиль для карточки организации -->
        <Style x:Key="CharityCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF5F5F5"/>
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Шапка -->
            <RowDefinition Height="*"/>
            <!-- Основное содержимое -->
            <RowDefinition Height="Auto"/>
            <!-- Подвал -->
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="Green" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="Назад" 
                        Style="{StaticResource RoundedButtonStyle}" 
                        Background="Green" 
                        Click="GoBackButton_Click" 
                        Width="120"
                        Height="40"
                        Margin="20,0,30,0"/>

                <TextBlock Text="MARATHON SKILLS 2016" 
                           FontSize="24"
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto" Background="LightGray">
            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="Список благотворительных организаций"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#241D70"
                           Margin="0,0,0,15"/>

                <!-- Описание -->
                <TextBlock Text="Это - список всех благотворительных учреждений, которые поддерживаются в Marathon Skills 2016. Спасибо за помощь вы поддерживаете их, спонсируя бегунов!"
                           FontSize="16"
                           TextWrapping="Wrap"
                           Margin="0,0,0,30"/>

                <!-- Список организаций -->
                <ItemsControl x:Name="LvCharity" ItemsSource="{Binding}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CharityCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Логотип -->
                                    <Image Source="{Binding CharityLogo, Converter={StaticResource ImagePathConverter}}" 
                                           Height="120" 
                                           Width="120"
                                           Stretch="Uniform"
                                           Margin="10"
                                           Grid.Column="0"/>

                                    <!-- Информация -->
                                    <StackPanel Grid.Column="1" Margin="10">
                                        <TextBlock Text="{Binding CharityName}"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,10"/>

                                        <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                                            <TextBlock Text="{Binding CharityDescription}"
                                                       TextWrapping="Wrap"/>
                                        </ScrollViewer>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Подвал -->
        <Border Grid.Row="2" Background="Green" Padding="10">
            <TextBlock x:Name="CountdownTextBlock"
                       Text="18 дней 8 часов и 17 минут до старта марафона!"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="16"
                       FontWeight="Bold"/>
        </Border>
    </Grid>
</Page>