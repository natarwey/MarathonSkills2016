<Page x:Class="MarathonSkills2016.Pages.VolunteerManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="VolunteerManagementPage">
    <DockPanel Background="LightGray" LastChildFill="True">
        <!-- Верхняя панель -->
        <Border
            Height="80"
            Background="Green"
            DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Кнопка Назад -->
                <Button
                    Grid.Column="0"
                    Width="120"
                    Height="40"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Background="Green"
                    Click="GoBackButton_Click"
                    Content="Назад"
                    FontWeight="Bold"
                    Foreground="Black"
                    Style="{StaticResource RoundedButtonStyle}" />

                <!-- Заголовок -->
                <TextBlock
                    Grid.Column="1"
                    Margin="115,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Управление волонтерами" />
            </Grid>
        </Border>

        <Border
            Height="60"
            Background="Green"
            DockPanel.Dock="Bottom">
            <TextBlock
                x:Name="CountdownTextBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Black"
                Text="18 дней 8 часов и 17 минут до старта марафона!" />
        </Border>

        <!-- Основное содержимое -->
        <Grid Background="LightGray">
            <Border
                Width="750"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderThickness="1"
                CornerRadius="10"
                Margin="0,20,0,20">
                <StackPanel>
                    <!-- Панель управления -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                        <TextBlock
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            FontSize="14"
                            FontWeight="Bold"
                            Text="Сортировать по:" />

                        <ComboBox
                            x:Name="SortComboBox"
                            Width="120"
                            Height="30"
                            Margin="0,0,20,0"
                            SelectedIndex="0"
                            SelectionChanged="SortComboBox_SelectionChanged">
                            <ComboBoxItem Content="Фамилии" />
                            <ComboBoxItem Content="Имени" />
                            <ComboBoxItem Content="Стране" />
                            <ComboBoxItem Content="Полу" />
                        </ComboBox>

                        <Button
                            x:Name="ImportButton"
                            Width="180"
                            Height="40"
                            Margin="10,0,0,0"
                            Click="ImportButton_Click"
                            Content="Загрузка волонтеров"
                            FontWeight="Bold"
                            Foreground="White"
                            Style="{StaticResource RoundedButtonStyle}" />

                        <Button
                            Width="120"
                            Height="40"
                            Margin="20,0,0,0"
                            Background="Green"
                            Click="RefreshButton_Click"
                            Content="Обновить"
                            FontWeight="Bold"
                            Foreground="Black"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </StackPanel>

                    <!-- Количество волонтеров -->
                    <TextBlock
                        x:Name="VolunteerCountText"
                        HorizontalAlignment="Left"
                        Margin="20,0,0,10"
                        FontSize="14"
                        FontWeight="Bold"
                        Text="Всего волонтеров: 0" />

                    <!-- Таблица волонтеров -->
                    <ListView x:Name="VolunteersListView" BorderThickness="0" Height="300">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Фамилия" Width="150" DisplayMemberBinding="{Binding LastName}" />
                                <GridViewColumn Header="Имя" Width="150" DisplayMemberBinding="{Binding FirstName}" />
                                <GridViewColumn Header="Страна" Width="150" DisplayMemberBinding="{Binding CountryCode}" />
                                <GridViewColumn Header="Пол" Width="100" DisplayMemberBinding="{Binding Gender}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Page>