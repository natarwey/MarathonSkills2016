<Page x:Class="MarathonSkills2016.Pages.ConfirmSponsor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="ConfirmSponsor">

    <Grid Background="LightGray">
        <!--  Верхняя панель с заголовком  -->
        <Border
            Height="80"
            VerticalAlignment="Top"
            Background="Green">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="32"
                FontWeight="Bold"
                Foreground="White"
                Text="MARATHON SKILLS 2025" />
        </Border>

        <!--  Основное содержимое  -->
        <StackPanel
            Width="524"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <!--  Основное сообщение  -->
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#241D70"
                Text="Спасибо за вашу спонсорскую поддержку!" />

            <TextBlock
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                FontSize="16"
                Text="Спасибо за поддержку бегуна в Marathon Skills 2025!                        Ваше пожертвование пойдет в его благотворительную организацию."
                TextWrapping="Wrap" />

            <!--  Информация о спонсорстве  -->
            <Border
                Margin="0,0,0,30"
                Padding="20"
                BorderThickness="1"
                CornerRadius="5">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        x:Name="RunnerTxt"
                        Text="Иван Прудов(204) из Russia" />

                    <TextBlock
                        Margin="0,0,0,10"
                        HorizontalAlignment="Center"
                        FontSize="30"
                        x:Name="FundTxt"
                        Text="Фонд кошек" />

                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="68"
                        x:Name="MoneyTxt"
                        FontWeight="Bold"
                        Foreground="Green"
                        Text="$50" />
                </StackPanel>
            </Border>

            <!--  Кнопка Назад  -->
            <Button
                Width="120"
                Height="40"
                HorizontalAlignment="Center"
                Background="White"
                BorderBrush="Green"
                BorderThickness="1"
                Click="GoBackButton_Click"
                Content="Назад"
                FontSize="16"
                Foreground="#241D70" />
        </StackPanel>

        <!--  Таймер до старта  -->
        <Border
            Height="60"
            VerticalAlignment="Bottom"
            Background="Green">
            <TextBlock
                x:Name="CountdownTextBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Black"
                Text="18 дней 8 часов и 17 минут до старта марафона!" />
        </Border>
    </Grid>
</Page>
