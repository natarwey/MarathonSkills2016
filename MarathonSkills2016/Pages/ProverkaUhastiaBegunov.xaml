<Page x:Class="MarathonSkills2016.Pages.ProverkaUhastiaBegunov"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProverkaUhastiaBegunov">

    <Grid Background="LightGray">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0" Background="Green">
			<StackPanel
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
				<Button
                    Width="70"
                    Height="30"
                    Margin="0,0,30,0"
                    Background="Green"
                    Click="GoBackButton_Click"
                    Content="Назад"
                    FontFamily="Open Sans Light"
                    Style="{StaticResource RoundedButtonStyle}" />
				<TextBlock
                    FontFamily="Open Sans Semibold "
                    FontSize="28"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="MARATHON SKILLS 2025" />

			</StackPanel>
		</Grid>
		<StackPanel
            Grid.Row="1"
            Margin="0,112,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
			<Button
                Width="240"
                Height="45"
                Margin="0,0,0,10"
                Background="Green"
                Click="DoEarlierButton_Click"
                Content="Я участвовал ранее"
                FontFamily="Open Sans Light"
                Style="{StaticResource RoundedButtonStyle}" />
			<Button
                Height="45"
                Margin="0,0,0,10"
                Background="Green"
                Click="NewRunnerButton_Click"
                Content="Я новый участник"
                FontFamily="Open Sans Light"
                Style="{StaticResource RoundedButtonStyle}" />
		</StackPanel>
		<StackPanel Grid.Row="1">
			<Button
                Grid.Row="1"
                Height="30"
                Margin="710,270,10,55"
                Background="Green"
                Click="LoginButton_Click"
                Content="Login"
                FontFamily="Open Sans Light"
                Foreground="White"
                Style="{StaticResource RoundedButtonStyle}" />
		</StackPanel>
	</Grid>
</Page>
