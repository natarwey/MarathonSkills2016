<Page x:Class="MarathonSkills2016.Pages.VolunteerImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="VolunteerImportPage">

    <DockPanel Background="LightGray" LastChildFill="True">
        <!-- Верхняя панель -->
        <Border
            Height="80"
            Background="Green"
            DockPanel.Dock="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Кнопка Назад -->
                <Button
                    Grid.Column="0"
                    Width="120"
                    Height="40"
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    Background="Green"
                    Click="GoBackButton_Click"
                    Content="Назад"
                    FontWeight="Bold"
                    Foreground="Black"
                    Style="{StaticResource RoundedButtonStyle}" />

                <!-- Заголовок -->
                <TextBlock
                    Grid.Column="1"
                    Margin="115,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="MARATHON SKILLS 2016" />
            </Grid>
        </Border>

        <Border
            Height="60"
            Background="Green"
            DockPanel.Dock="Bottom">
            <TextBlock
                x:Name="CountdownTextBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Black"
                Text="18 дней 8 часов и 17 минут до старта марафона!" />
        </Border>

        <!-- Основное содержимое -->
        <Grid Background="LightGray">
            <Border
                Width="600"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                BorderThickness="1"
                CornerRadius="10"
                Margin="0,20,0,20">
                <StackPanel Margin="40">
                    <!-- Заголовок формы -->
                    <TextBlock
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#241D70"
                        Text="Загрузка волонтеров" />

                    <!-- CSV файл -->
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#241D70"
                        Text="CSV файл волонтеров:" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox
                            x:Name="FilePathTextBox"
                            Grid.Column="0"
                            Height="40"
                            Padding="10"
                            FontSize="14"
                            IsReadOnly="True"
                            Style="{StaticResource ModernTextBox}" />

                        <Button
                            Grid.Column="1"
                            Width="120"
                            Height="40"
                            Margin="10,0,0,0"
                            Background="Green"
                            Click="BrowseButton_Click"
                            Content="Просмотр..."
                            FontWeight="Bold"
                            Foreground="White"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </Grid>

                    <!-- Кнопки загрузки/отмены -->
                    <StackPanel
                        Margin="0,30,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Width="120"
                            Height="40"
                            Background="Green"
                            Click="ImportButton_Click"
                            Content="Загрузка"
                            FontWeight="Bold"
                            Foreground="White"
                            Style="{StaticResource RoundedButtonStyle}" />

                        <Button
                            Width="120"
                            Height="40"
                            Margin="20,0,0,0"
                            Background="Green"
                            Click="CancelButton_Click"
                            Content="Отмена"
                            FontWeight="Bold"
                            Foreground="Black"
                            Style="{StaticResource RoundedButtonStyle}" />
                    </StackPanel>

                    <!-- Формат CSV файла -->
                    <TextBlock
                        Margin="0,30,0,5"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#241D70"
                        Text="CSV файл должен иметь следующие поля:" />

                    <StackPanel Margin="10">
                        <!--<TextBlock Text="• Email: Адрес электронной почты волонтера" />-->
                        <TextBlock Text="• FirstName: Имя волонтера" />
                        <TextBlock Text="• LastName: Фамилия волонтера" />
                        <TextBlock Text="• CountryCode: Код страны (3 символа)" />
                        <TextBlock Text="• Gender: Пол (Мужской/Женский)" />
                    </StackPanel>

                    <!-- Лог загрузки -->
                    <Border
                        Margin="0,20,0,0"
                        BorderThickness="1"
                        BorderBrush="LightGray"
                        CornerRadius="5"
                        Padding="10"
                        Visibility="Collapsed"
                        x:Name="LogBorder">
                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="LogTextBlock" TextWrapping="Wrap" />
                        </ScrollViewer>
                    </Border>

                    <!-- Статистика -->
                    <StackPanel Margin="0,10,0,0" Visibility="Collapsed" x:Name="StatsPanel">
                        <TextBlock x:Name="StatsTextBlock" FontWeight="Bold" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Page>