<Page x:Class="MarathonSkills2016.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2016.Pages"
       Title="HomePage"
    d:DesignHeight="600"
    d:DesignWidth="800"
    Background="LightGray"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition />
            <RowDefinition Height="4*" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="Green">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="32"
                FontWeight="Bold"
                Foreground="White"
                Text="MARATHON SKILLS 2025" />
        </Border>

        <Border
            Grid.Row="1"
            Height="40"
            VerticalAlignment="Top"
            Background="Green">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Text="Москва, Россия среда 14 мая 2025" />
        </Border>

        <!--  Основное содержимое  -->
        <StackPanel
            Grid.Row="2"
            Width="400"
            Margin="0,40,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <!--  Кнопки действий  -->
            <Button
                Height="60"
                Margin="0,0,0,20"
                BorderThickness="0"
                Click="RunnerButton_Click"
                Style="{StaticResource RoundedButtonStyle}">
                <Button.Content>
                    <TextBlock
                        FontSize="18"
                        Foreground="White"
                        Text="Я хочу стать бегуном" />
                </Button.Content>
                <Button.Background>
                    <SolidColorBrush Color="Green" />
                </Button.Background>
            </Button>

            <Button
                Height="60"
                Margin="0,0,0,20"
                BorderThickness="0"
                Click="SponsorButton_Click"
                Style="{StaticResource RoundedButtonStyle}">
                <Button.Content>
                    <TextBlock
                        FontSize="18"
                        Foreground="White"
                        Text="Я хочу стать спонсором бегуна" />
                </Button.Content>
                <Button.Background>
                    <SolidColorBrush Color="Green" />
                </Button.Background>
            </Button>

            <Button
                Height="60"
                BorderThickness="0"
                Click="MoreInfoButton_Click"
                Style="{StaticResource RoundedButtonStyle}">
                <Button.Content>
                    <TextBlock
                        FontSize="18"
                        Foreground="White"
                        Text="Я хочу узнать больше о событии" />
                </Button.Content>
                <Button.Background>
                    <SolidColorBrush Color="Green" />
                </Button.Background>
            </Button>


        </StackPanel>
        <Button
            Grid.Row="3"
            Width="101"
            Height="30"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            Background="Green"
            Click="LoginButton_Click"
            Content="Login"
            FontFamily="Open Sans Light"
            Foreground="White"
            Style="{StaticResource RoundedButtonStyle}" />

		<Border
            Grid.Row="4"
            Height="60"
            VerticalAlignment="Bottom"
            Background="Green">
			<TextBlock
                x:Name="CountdownTextBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Black"
                Text="Идет расчет времени..." />
		</Border>
	</Grid>
</Page>
