<Page x:Class="MarathonSkills2016.Pages.RedaktProfil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Редактирование профиля">

    <Grid Background="LightGray">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<!-- Шапка -->
			<RowDefinition Height="*" />
			<!-- Основное содержимое -->
			<RowDefinition Height="Auto" />
			<!-- Подвал -->
		</Grid.RowDefinitions>

		<!-- Шапка -->
		<Border Grid.Row="0" Background="Green" Padding="10">
			<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
				<Button
                    Width="120"
                    Height="40"
                    Margin="20,0,30,0"
                    Background="Green"
                    Click="GoBackButton_Click"
                    Content="Назад"
                    Style="{StaticResource RoundedButtonStyle}" />

				<TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="MARATHON SKILLS 2025"
                    VerticalAlignment="Center" />
			</StackPanel>
		</Border>

		<!-- Основное содержимое -->
		<ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto">
			<Grid Width="700" HorizontalAlignment="Center">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<!-- Левая колонка -->
				<StackPanel Grid.Column="0" Margin="0,0,20,0">
					<Label Content="Редактирование профиля"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

					<!-- Email -->
					<Grid Margin="0,0,0,15">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Label Content="Email:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

						<Label x:Name="EmailTxt"
                               Grid.Column="1"
                               Content="the.email@address.com"
                               FontStyle="Italic"
                               Foreground="#FF878787" />
					</Grid>

					<!-- Имя -->
					<Grid Margin="0,0,0,15">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Label Content="Имя:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

						<TextBox x:Name="NameTxt"
                                Grid.Column="1"
                                Text="Имя"
                                FontStyle="Italic"
                                Foreground="#FF878787"
                                GotFocus="NameTxt_GotFocus"
                                LostFocus="NameTxt_LostFocus"/>
					</Grid>

					<!-- Фамилия -->
					<Grid Margin="0,0,0,15">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Label Content="Фамилия:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

						<TextBox x:Name="SecondNameTxt"
                                Grid.Column="1"
                                Text="Фамилия"
                                FontStyle="Italic"
                                Foreground="#FF878787"
                                GotFocus="SecondNameTxt_GotFocus"
                                LostFocus="SecondNameTxt_LostFocus"/>
					</Grid>

					<!-- Пол -->
					<Grid Margin="0,0,0,15">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Label Content="Пол:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

						<ComboBox x:Name="CmbxGender"
                                 Grid.Column="1"
                                 SelectedIndex="0"
                                 Foreground="Green"
                                 GotFocus="CmbxGender_GotFocus">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding Gender1}" />
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</Grid>

					<!-- Дата рождения -->
					<Grid Margin="0,0,0,15">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Label Content="Дата рождения:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

						<DatePicker x:Name="BirthDate"
                                   Grid.Column="1"
                                   SelectedDateChanged="BirthDate_SelectedDateChanged"/>
					</Grid>

					<!-- Страна -->
					<Grid Margin="0,0,0,15">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Label Content="Страна:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

						<ComboBox x:Name="CmbxCountry"
                                 Grid.Column="1"
                                 SelectedIndex="77"
                                 FontStyle="Italic"
                                 Foreground="Green"
                                 GotFocus="CmbxCountry_GotFocus">
							<ComboBox.ItemTemplate>
								<DataTemplate>
									<TextBlock Text="{Binding CountryName}" />
								</DataTemplate>
							</ComboBox.ItemTemplate>
						</ComboBox>
					</Grid>
				</StackPanel>

				<!-- Правая колонка -->
				<StackPanel Grid.Column="1">
					<!-- Фото профиля -->
					<Border x:Name="BorderBg"
                           Width="150"
                           Height="150"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Left"
                           Background="#FFCCCCCC"
                           BorderBrush="Green"
                           BorderThickness="2"
                           CornerRadius="5">
						<Image x:Name="ImageCharity"
                              Stretch="Uniform"/>
					</Border>

					<!-- Загрузка фото -->
					<Grid Margin="0,0,0,20">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>

						<Label Content="Фото файл:"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

						<TextBox x:Name="ImagePathTxt"
                                Grid.Column="1"
                                Text="Photo_logo.jpg"
                                FontStyle="Italic"
                                Foreground="#FF878787"
                                GotFocus="EmailTxt_GotFocus"
                                LostFocus="EmailTxt_LostFocus"/>

						<Button x:Name="BtnFile"
                               Grid.Column="2"
                               Width="100"
                               Height="30"
                               Margin="10,0,0,0"
                               Background="Green"
                               Click="BtnFile_Click"
                               Content="Просмотр..."
                               Style="{StaticResource RoundedButtonStyle}"/>
					</Grid>

					<!-- Смена пароля -->
					<Label Content="Смена пароля"
                           FontWeight="Bold"
                           Margin="0,20,0,10"/>

					<TextBlock Text="Оставьте эти поля незаполненными, если вы не хотите изменять пароль."
                              TextWrapping="Wrap"
                              Margin="0,0,0,15"/>

					<!-- Пароль -->
					<Grid Margin="0,0,0,15">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Label Content="Пароль:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

						<Grid Grid.Column="1">
							<PasswordBox x:Name="PassTxt"
                                       GotFocus="PassTxt_GotFocus"
                                       LostFocus="PassTxt_LostFocus"/>
							<Label x:Name="PasEnterLabel"
                                  VerticalAlignment="Center"
                                  Content="Password"
                                  FontStyle="Italic"
                                  Foreground="#FF878787"
                                  IsHitTestVisible="False"/>
						</Grid>
					</Grid>

					<!-- Повтор пароля -->
					<Grid Margin="0,0,0,20">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<Label Content="Повтор пароля:"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

						<Grid Grid.Column="1">
							<PasswordBox x:Name="PassCheckTxt"
                                       GotFocus="PassCheckTxt_GotFocus"
                                       LostFocus="PassCheckTxt_LostFocus"/>
							<Label x:Name="PassCheckEnterLabel"
                                  VerticalAlignment="Center"
                                  Content="Re-enter password"
                                  FontStyle="Italic"
                                  Foreground="#FF878787"
                                  IsHitTestVisible="False"/>
						</Grid>
					</Grid>
				</StackPanel>
			</Grid>
		</ScrollViewer>

		<!-- Кнопки сохранения/отмены -->
		<StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center"
                   Margin="0,417,0,81" Grid.RowSpan="2">
			<Button Width="120"
                   Height="40"
                   Margin="0,0,20,0"
                   Background="Green"
                   Click="SaveButton_Click"
                   Content="Сохранить"
                   Foreground="White"
                   Style="{StaticResource RoundedButtonStyle}"/>

			<Button Width="120"
                   Height="40"
                   Background="Green"
                   Click="CancelButton_Click"
                   Content="Отмена"
                   Style="{StaticResource RoundedButtonStyle}"/>
		</StackPanel>

		<!-- Подвал -->
		<Border Grid.Row="2" Background="Green" Padding="10" Margin="0,0,0,-17">
			<TextBlock x:Name="CountdownTextBlock"
                      Text="18 дней 8 часов и 17 минут до старта марафона!"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      FontSize="16"
                      FontWeight="Bold"/>
		</Border>
	</Grid>
</Page>