<Page x:Class="MarathonSkills2016.Pages.PodtverditRegMarafon"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkills2016.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PodtverditRegMarafon">

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Background="Green" Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10">
                <Button Content="Назад"  FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="Green" Click="GoBackButton_Click" Width="70" Height="30" Margin="0,0,30,0"/>
                <TextBlock Text="MARATHON SKILLS 2025" FontFamily="Open Sans Semibold " FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
            <Button Content="Logout" FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="Green" Click="LogoutButton_Click" RenderTransformOrigin="-0.523,0.533" Margin="692,12,38,12"/>
        </Grid>
        <StackPanel Grid.Row="1">
            <TextBlock Text="Спасибо за вашу регистрацию в качестве бегуна!" FontFamily="Open Sans Light" FontSize="20" HorizontalAlignment="Center" Height="53" TextWrapping="Wrap" TextAlignment="Center" Width="344"/>
            <TextBlock Text="Спасибо за вашу регистрацию в качестве бегуна в Marathon Skills 2025!" TextWrapping="Wrap"  HorizontalAlignment="Center"  FontFamily="Arial" FontSize="14" Width="560" TextAlignment="Center" Height="19" Margin="0,10,0,0"/>
            <TextBlock Text="С вами свяжутся по поводу оплаты." TextWrapping="Wrap"  HorizontalAlignment="Center"  FontFamily="Arial" FontSize="14" Width="560" TextAlignment="Center" Height="20" Margin="0,10,0,0"/>
            <Button x:Name="BtnOk" FontFamily="Open Sans Light" Style="{StaticResource RoundedButtonStyle}" Background="Green" Content="OK" Width="63" Height="34" Margin="20" Click="BtnOk_Click"/>
        </StackPanel>
    </Grid>
</Page>

