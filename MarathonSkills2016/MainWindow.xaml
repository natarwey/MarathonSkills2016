<Window x:Class="MarathonSkills2016.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarathonSkills2016"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="900">
    <Grid Background="LightGray">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <Grid Background="Green" VerticalAlignment="Bottom" Height="60">
            <TextBlock x:Name="TimeLeftTextBlock" 
                       Text="0 дней 0 часов и 0 минут до старта марафона!" 
                       Foreground="White"
                       FontWeight="Bold"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       FontSize="16"/>
        </Grid>
    </Grid>
</Window>